import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.lang.*;
import java.util.*;

import javax.swing.*;


public class mediaPlayer {
	
	public static class mySwing extends JFrame implements ActionListener
	{
		JPanel myPanel;
		JButton key1;
		JLabel label1;
		JMenuBar menuBar;
		Container contentPane;
		
		
		public mySwing()
		{
			myPanel = new JPanel(new BorderLayout());
			
			key1 = new JButton("OK");
			key1.addActionListener(this);
			label1 = new JLabel();
			
			/// Menu bar	
			menuBar = new JMenuBar();
			menuBar.setOpaque(true);
			menuBar.setPreferredSize(new Dimension(1200, 20));
			JMenu fileMenu = new JMenu("File");
			JMenu helpMenu = new JMenu("Help");
			
			
			/// Page layout
			contentPane = getContentPane();
			contentPane.setLayout(new FlowLayout());
			contentPane.add(menuBar, BorderLayout.LINE_START);
			
			
						
			myPanel.add(key1);
			myPanel.add(label1);
			this.add(myPanel);
			menuBar.add(fileMenu);
			menuBar.add(helpMenu);
			this.add(menuBar);
		}

		@Override
		public void actionPerformed(ActionEvent event) {
			if(event.getSource()==key1)
			{
				label1.setText("HI!");
				System.out.println("Response: ");
			}	
			
		}
		
	}
	public static void main(String[] args) {
		
		JFrame frame = new mySwing();
		frame.setTitle("Juke Box");
		frame.setSize(1200,800);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
	}
	
	
}
